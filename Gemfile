# Gemfile
source 'https://rubygems.org'
ruby '3.3.1'  # Specify your Ruby version

# Core gems
gem 'sinatra'
gem 'sinatra-contrib'  # Helpful Sinatra extensions
gem 'puma'            # Web server
gem 'json'            # JSON support
gem 'sinatra-cors'    # For CORS support
gem 'rackup'
gem 'sqlite3'
gem 'csv'

# Database (uncomment if you need a database)
# gem 'pg'              # PostgreSQL
# gem 'activerecord'    # ORM
# gem 'sinatra-activerecord'

# Development and testing gems
group :development do
  gem 'rerun'         # Auto-reloads your app when files change
  gem 'dotenv'        # For environment variables
end

group :test do
  gem 'rspec'
  gem 'rack-test'
end